<Window x:Class="BetterRun.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BetterRun"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        Background="Transparent"
        WindowStyle="SingleBorderWindow"
        Loaded="Window_Loaded"
        mc:Ignorable="d"
        Foreground="{DynamicResource SystemControlPageTextBaseHighBrush}"
        ui:WindowHelper.UseModernWindowStyle="False"
        
        Title="Run" Height="205" Width="508" ResizeMode="NoResize">
    <WindowChrome.WindowChrome>
        <WindowChrome
        CaptionHeight="100"
        ResizeBorderThickness="8"
        CornerRadius="0"
        GlassFrameThickness="-1"
        UseAeroCaptionButtons="True" />
    </WindowChrome.WindowChrome>
    <TextBlock HorizontalAlignment="Left" Margin="19,10,0,0" TextWrapping="Wrap" Text="Run" VerticalAlignment="Top" Foreground="White"/>


</Window>